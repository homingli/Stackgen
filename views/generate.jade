append head
  //script(src="/jqueryui/jquery-ui-1.8.20.custom.min.js")
  //link(rel="stylesheet", href="/jqueryui/css/cupertino/jquery-ui-1.8.20.custom.css")


div.hero-unit 
  h1 Generating...

div.content 
    div.row 
      div(id="content")
        div(id="wrapper")
            form(id="stackgen", method="POST", action="/generate")
                legend App basics
                p
                  div(class="span6")
                    label(class="control-label") What's the name of your app?
                    input( id="appName", name="appName", type="text", class="span3", placeholder="my_sample_app")

                p
                  div(class="span6")
                    label(class="control-label") [optional] Choose a URL for your app?
                    input( id="appName", name="appURL", type="text", class="span3", placeholder="mysampleapp.com")

                legend Language/Framework
                p
                  div(class="span6")
                    label(class="control-label") Cool, now what is the primary langage of your app?

                    select(id="appFramework", name="appFramework", class="span3")
                        option(value="", disabled) Choose a framework...
                        option(value="perl") Perl
                        option(value="python") Python
                        option(value="buildpack") Buildpack
                        option(value="generic") Generic Framework
                        option(value="java_web") Java
                        option(value="node") Node.js
                        option(value="php") PHP
                        option(value="ruby") Ruby

                  div(class="span6")
                    label(class="control-label") Smokin' - do you want to use a specific runtime?

                    select(id="appRuntime", name="appRuntime", class="span3")
                        option(value="", disabled) Choose a runtime...(optional)
                        option(value="none") None
                        option(value="perl") ActivePerl 5.14
                        option(value="python27")  ActivePython 2.7
                        option(value="python32")  ActivePython 3.2
                        option(value="buildpack") Buildpack
                        option(value="generic") Generic Framework
                        option(value="java") Java 6
                        option(value="node") Node.js v0.6
                        option(value="php") PHP 5
                        option(value="ruby18") Ruby 1.8
                        option(value="ruby19")  Ruby 1.9

                div(class="row")
                  div(class="span6")
                    legend Memory
                    label(class="control-label") How much memory (in MB) is it going to need?
                    input( class="knob", name="appMem", style="height:50px;", data-skin="tron", data-width="200", data-min="32", data-max="8000", data-thickness=".2", data-bgColor="#FFFFFF", data-displayInput="true", data-ticks="8", data-cursor=true, value="128")

                  div(class="span6")
                    legend Instances
                    label(class="control-label") How many instances does it need?
                    input( class="knob", name="numInstances", style="height:50px;", data-skin="tron", data-width="200", data-min="1", data-thickness=".4", data-bgColor="#FFFFFF", data-displayInput="true", data-cursor=true, data-ticks="100", value="1")
              
                div(class="row")
                  legend Services
                  div(class="span4")
                    label Add your services
                    select(name="serviceChoices", id="serviceChoices")
                        option mongodb
                        option mysql
                        option redis
                        option postgresql
                        option filesystem
                        option rabbit
                  
                  div(class="span4")
                    label Service Name
                    input(type="text", name="serviceName", id="serviceName") 
                  div(class="span2")
                    a(id="addService", class="btn") 
                      i.icon-plus
                      |  Add service

                p(id="servicesCont")

                p
                legend Hooks
                label Execute command line in different stages of deployment! More info at  &nbsp;
                    a(href='http://docs.stackato.com/deploy/stackatoyml.html#hooks') Stackato Docs 
                div.label(style="padding:3px;font-size:15px;margin-right:10px;")  Pre-staging hooks
                //span.label.label(style="font-size:18px;") These are run before any of the staging procedures
                div(class="row")
                    div(class="span8")
                      label Hook 1
                      input(type="text", class="preStagingHook", name="preStagingHooks[]") 
                    div(class="span4")
                      a(href="btn", class="btn", href="#", id="addPreStagingHook") 
                        i(class="icon-plus")
                        | Add another
                div(class="row")
                    div(class="span8")
                      label Hook 2
                      input(type="text", class="preStagingHook", name="preStagingHooks[]") 

                div.label(style="padding:3px;font-size:15px;margin-right:10px;") Post-staging hooks
                div(class="row")
                    div(class="span8")
                      label Hook 1
                      input(type="text", class="postStagingHook", name="postStagingHooks[]") 
                    div(class="span4")
                      a(href="btn", class="btn", href="#", id="addPostStagingHook") 
                        i(class="icon-plus")
                        | Add another
                div(class="row")
                    div(class="span8")
                      label Hook 2
                      input(type="text", class="postStagingHook", name="postStagingHooks[]") 

                div.label(style="padding:3px;font-size:15px;margin-right:10px;")  Pre-running hooks
                div(class="row")
                    div(class="span8")
                      label Hook 1
                      input(type="text", class="preRunningHook", name="preRunningHooks[]") 
                    div(class="span4")
                      a(href="btn", class="btn", href="#", id="addPreRunningHook") 
                        i(class="icon-plus")
                        | Add another
                div(class="row")
                    div(class="span8")
                      label Hook 2
                      input(type="text", class="preRunningHook", name="preRunningHooks[]") 

                p
                legend Advanced
                div(class="span6")
                  label ignores
                  input(type="text", name="ignores", placeholder=".git")

                div(class="span6")
                  label env vars
                  input(type="text", name="envs", placeholder="var1=foo,var2=bar")

                p
                legend Generate
                div(class="span12")
                    button(type="submit", class="btn btn-large btn-success") Generate



          div(id="navigation", style="display:none")
            ul
              li(class="selected") 
                a(href="#") App Basics

              li
                a(href="#") Runtimes

              li
                a(href="#") Memory

              li
                a(href="#") Instances

              li
                a(href="#") Services

              li
                a(href="#") Hooks
              li
                a(href="#") Advanced

              li
                a(href="#") Generate
                

